          }),
          (i[r].l = 1 * new Date());
        (a = s.createElement(o)), (m = s.getElementsByTagName(o)[0]);
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m);
      })(
        window,
        document,
        'script',
        'https://www.google-analytics.com/analytics.js',
        'ga'
      );
      ga('create', 'UA-48218627-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>
  <body>
    <div class="playlist">
      <h1 class="playlist__title">Happy Holidays to Our Biggest Fans</h1>
      <p class="playlist__text">
        Please enjoy some of our favorite hits from the cassette tape era!
      </p>
      <div class="playlist__boombox">
        <div class="playlist__boombox-image"></div>
        <div class="playlist__boombox-noclick"></div>
        <iframe
          frameborder="0"
          class="playlist__player"
          src="https://open.spotify.com/embed/user/9uc53dbwx9363yg40254d8n4g/playlist/5JyRYGYXje2ug1lzrfA9C0"
          width="335"
          height="470"
          frameborder="0"
          allowtransparency="true"
          allow="encrypted-media"
        ></iframe>
      </div>
      <a
        href="https://open.spotify.com/user/9uc53dbwx9363yg40254d8n4g/playlist/5JyRYGYXje2ug1lzrfA9C0"
        class="playlist__share"
        >Share The Playlist</a
      >
      <a class="footer-box" href="https://braveux.com" target="_blank">
        <div class="footer-logo">Brave UX</div>
        <div class="footer-logo--hover"></div>
      </a>
    </div>
  </body>
</html>
