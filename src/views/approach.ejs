        <!-- END approach-section -->

        <section class="approach-section spacing-bottom">
            <div class="approach-inner-block two-third">
                <!-- start ANIMATION 4 -->
                <img src="images/approach/scene4.svg" alt="Against all obstacles and odds, the climbers make it to a room with a waterfall in the background and a treasure chest in the foreground that is erupting with light." class="approach-image">
                <div id="animation-container-four" class="approach-animation-container">
                  <canvas id="canvas-four" class="approach-animation-canvas"></canvas>
                  <div id="dom-overlay-container-four" class="approach-animation-overlay">
