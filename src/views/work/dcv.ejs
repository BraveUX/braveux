                <div class="inner-block two-third float-right right-padded mobile-container-absolute relative dcv-home">
                    <div class="frame frame-desktop" data-sr>
                        <img class="case-block-image" src="../images/dcv/desktop-home.jpg">
                    </div>
                    <div class="frame frame-mobile light shadow absolute" data-sr="wait .3s, enter top, move 100px">
                        <div class="frame-container">
                            <img class="case-block-image" src="../images/dcv/mobile-home.jpg" />
                        </div>
                    </div>
                </div>
            </section>
            <!-- END case-block -->

            <section class="case-block case-full-image dcv-sharks"></section>
            <!-- END case-block -->

